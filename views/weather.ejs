<%- include("partials/header.ejs") %>
    <main class="user-input-weather">
        <section class="user-input-results">
            <h1 class="location">
                <%= location %>
            </h1>

            <div class="user-input-flex">
                <% if (locals.weatherData) { %>
                    <div class="box">
                        <h2 class="temperature">Maximum Temperature</h>
                            <h4>
                                <%= Math.round(weatherData.daily.temperature_2m_max[0]) %>° C
                            </h4>
                    </div>
                    <div class="box">
                        <h2 class="temperature">Minimum Temperature</h>
                            <h4>
                                <%= Math.round(weatherData.daily.temperature_2m_min[0]) %>° C
                            </h4>
                    </div>
                    <div class="box">
                        <h4 class="uv">UV: </h4>
                        <h4><%= weatherData.daily.uv_index_max[0] %></h4>
                        <h6 class="hidden">The <a href="https://www.who.int/health-topics/ultraviolet-radiation#tab=tab_2"
                                target="_blank">World Health Organization (WHO)</a> recommends that you wear sun protection when the UV is above 3.</h6>
                    </div>
                    <div class="box">
                        <h4 class="wind-speed">Wind Speed: </h4>
                        <h4>
                            <%= weatherData.hourly.wind_speed_10m[0] %> mph
                        </h4>
                    </div>
                    <% } else { %>
                        <div>
                            <h6 class="error">
                                <%= error %>
                            </h6>
                        </div>
                        <% } %>
            </div>

        </section>
    </main>

    <%- include("partials/footer.ejs") %>

